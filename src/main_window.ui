<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <object class="GtkApplicationWindow" id="window">
    <property name="title">Coordenadas</property>
    <property name="default-width">700</property>
    <property name="default-height">300</property>
    <property name="resizable">false</property>

    <!-- A janela tem UM filho: um GtkOverlay -->
    <child>
      <object class="GtkOverlay">

        <!-- Conteúdo principal -->
        <child>
          <object class="GtkBox">
            <property name="orientation">vertical</property>
            <property name="spacing">5</property>
            <property name="margin-top">5</property>
            <property name="margin-bottom">5</property>
            <property name="margin-start">10</property>
            <property name="margin-end">10</property>

            <!-- Grid -->
            <child>
              <object class="GtkGrid">
                <property name="row-spacing">5</property>
                <property name="column-spacing">5</property>

                <child>
                  <object class="GtkLabel">
                    <property name="label">Tipo de coordenadas</property>
                    <property name="halign">start</property>
                    <layout>
                      <property name="column">0</property>
                      <property name="row">0</property>
                      <property name="row-span">1</property>
                    </layout>
                  </object>
                </child>

                <child>
                  <object class="GtkDropDown" id="cb_perfis">
                    <property name="halign">fill</property>
                    <property name="hexpand">true</property>
                    <layout>
                      <property name="column">1</property>
                      <property name="row">0</property>
                      <property name="column-span">2</property>
                    </layout>
                  </object>
                </child>

                <child>
                  <object class="GtkButton" id="bt_ad">
                    <property name="label">Novo perfil</property>
                    <property name="tooltip-text">Adiciona perfil de expressões regulares</property>
                    <layout>
                      <property name="column">1</property>
                      <property name="row">1</property>
                    </layout>
                  </object>
                </child>

                <child>
                  <object class="GtkButton" id="bt_rm">
                    <property name="label">Remove perfil</property>
                    <property name="tooltip-text">Remove perfil de expressões regulares selecionado</property>
                    <layout>
                      <property name="column">2</property>
                      <property name="row">1</property>
                    </layout>
                  </object>
                </child>

                <child>
                  <object class="GtkLabel">
                    <property name="label">Expressão para latitude:</property>
                    <property name="halign">start</property>
                    <layout>
                      <property name="column">0</property>
                      <property name="row">2</property>
                    </layout>
                  </object>
                </child>

                <child>
                  <object class="GtkEntry" id="ent_latitude">
                    <property name="tooltip-text">Informe a expressão regular referente a latitude (N/Y)</property>
                    <property name="text">\d{3}.\d{3},\d{1,3}</property>
                    <property name="halign">fill</property>
                    <property name="hexpand">true</property>
                    <layout>
                      <property name="column">1</property>
                      <property name="row">2</property>
                      <property name="column-span">2</property>
                    </layout>
                  </object>
                </child>

                <child>
                  <object class="GtkLabel">
                    <property name="label">Expressão para longitude:</property>
                    <property name="halign">start</property>
                    <layout>
                      <property name="column">0</property>
                      <property name="row">3</property>
                    </layout>
                  </object>
                </child>

                <child>
                  <object class="GtkEntry" id="ent_longitude">
                    <property name="tooltip-text">Informe a segunda expressão regular referente a coordenada E (X)</property>
                    <property name="text">\d{3}.\d{3},\d{1,3}</property>
                    <property name="halign">fill</property>
                    <property name="hexpand">true</property>
                    <layout>
                      <property name="column">1</property>
                      <property name="row">3</property>
                      <property name="column-span">2</property>
                    </layout>
                  </object>
                </child>

                <child>
                  <object class="GtkLabel">
                    <property name="label">Arquivo de entrada:</property>
                    <property name="halign">start</property>
                    <layout>
                      <property name="column">0</property>
                      <property name="row">4</property>
                    </layout>
                  </object>
                </child>

                <child>
                  <object class="GtkButton" id="bt_entrada">
                    <property name="label">Carregar texto</property>
                    <property name="tooltip-text">Selecione um arquivo de texto para ser analisado. A codificação deverá ser UTF-8.</property>
                    <property name="halign">fill</property>
                    <property name="hexpand">true</property>
                    <layout>
                      <property name="column">1</property>
                      <property name="row">4</property>
                      <property name="column-span">2</property>
                    </layout>
                  </object>
                </child>

                <child>
                  <object class="GtkLabel">
                    <property name="label">Diretório onde salvar (csv):</property>
                    <property name="halign">start</property>
                    <layout>
                      <property name="column">0</property>
                      <property name="row">5</property>
                    </layout>
                  </object>
                </child>

                <child>
                  <object class="GtkButton" id="bt_saida">
                    <property name="label">Salve em</property>
                    <property name="tooltip-text">Escolha o diretório para salvar o resultado da análise</property>
                    <property name="halign">fill</property>
                    <property name="hexpand">true</property>
                    <layout>
                      <property name="column">1</property>
                      <property name="row">5</property>
                      <property name="column-span">2</property>
                    </layout>
                  </object>
                </child>

                <child>
                  <object class="GtkLabel">
                    <property name="label">Salva como:</property>
                    <property name="halign">start</property>
                    <layout>
                      <property name="column">0</property>
                      <property name="row">6</property>
                    </layout>
                  </object>
                </child>

                <child>
                  <object class="GtkEntry" id="ent_planilha">
                    <property name="tooltip-text">Confira o arquivo e diretório escolhidos!</property>
                    <property name="text">planilha.csv</property>
                    <property name="editable">false</property>
                    <property name="halign">fill</property>
                    <property name="hexpand">true</property>
                    <layout>
                      <property name="column">1</property>
                      <property name="row">6</property>
                      <property name="column-span">2</property>
                    </layout>
                  </object>
                </child>
              </object>
            </child>

            <!-- Linha de botões inferior -->
            <child>
              <object class="GtkBox">
                <property name="orientation">horizontal</property>
                <property name="spacing">10</property>
                <property name="halign">center</property>
                <property name="margin-top">10</property>
                <child>
                  <object class="GtkButton" id="bt_fechar">
                    <property name="label">Fechar</property>
                    <property name="tooltip-text">Feche o aplicativo</property>
                    <property name="width-request">100</property>
                  </object>
                </child>
                <child>
                  <object class="GtkButton" id="bt_run">
                    <property name="label">Executar</property>
                    <property name="tooltip-text">Execute a busca pelo padrão desejado e retorne uma planilha .csv</property>
                    <property name="width-request">100</property>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>

        <!-- Notificação sobreposta -->
        <child type="overlay">
          <object class="GtkRevealer" id="rv_notifica">
            <property name="halign">center</property>
            <property name="valign">start</property>
            <property name="reveal-child">false</property>
            <child>
              <object class="GtkBox" id="box_notifica">
                <property name="orientation">horizontal</property>
                <property name="spacing">10</property>
                <!-- Substitui 'margin' por margens por lado -->
                <property name="margin-start">10</property>
                <property name="margin-end">10</property>
                <property name="margin-top">10</property>
                <property name="margin-bottom">10</property>
                <style>
                  <class name="app-notification"/>
                </style>
                <child>
                  <object class="GtkLabel" id="lb_notifica">
                    <property name="label">Todos os campos devem ser preenchidos.</property>
                    <property name="wrap">true</property>
                    <property name="max-width-chars">50</property>
                  </object>
                </child>
                <child>
                  <object class="GtkButton" id="bt_fecha_notifica">
                    <property name="icon-name">window-close-symbolic</property>
                    <property name="tooltip-text">Fechar notificação</property>
                    <style>
                      <class name="circular"/>
                    </style>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>

      </object>
    </child>
  </object>
</interface>
